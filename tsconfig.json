{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "types": [
      "@nomicfoundation/hardhat-ethers"
    ],
    "paths": {
      "@src/*": ["./src/*"],
      "@test-helpers": ["./test/helpers"]
    }
  },
  "exclude": [
    "./dist",
    "./node_modules",
    "./test/**/hardhat.config.ts",
    "./publish"
  ],
  "include": [
    "src",
    "test",
  ]
}
